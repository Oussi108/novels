<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"

    android:background="#59405c"

    >

    <TextView
        android:id="@+id/textView6"
        android:layout_width="291dp"
        android:layout_height="104dp"

        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="52dp"
        android:gravity="center"
        android:text="Choose your Setting"
        android:textColor="#00b7c2"
        android:textSize="35dp" />

    <Button
        android:id="@+id/submitsetting"
        android:layout_width="252dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="110dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:background="@drawable/buttonstart"
        android:text="Confirm"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="383dp"
        android:layout_height="168dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-7dp"
        android:layout_marginTop="109dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="210dp"
                android:layout_height="91dp"
                android:background="#993A3535"
                android:gravity="center"
                android:text="Font Size"
                android:textColor="#00b7c2"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:background="#993A3535"
                android:gravity="center"
                android:text="Color"
                android:textColor="#00b7c2"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/sizeSetting"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:background="#993A3535"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:textColor="#00b7c2"
                android:textSize="24sp"
                tools:text="55" />

            <Spinner
                android:id="@+id/colorsetting"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:background="#993A3535"
                android:gravity="center"
                android:textColor="#00b7c2" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>